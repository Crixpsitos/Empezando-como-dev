---
interface Props {
    nextUrl?: string;
    prevUrl?: string;
    currentPage?: number;
}
const { prevUrl, nextUrl, currentPage } = Astro.props;
---

{
    (prevUrl || nextUrl) && (
        <nav class="flex justify-center gap-4 mt-12">
            <a
                href={prevUrl ?? "/#"}
                class={`px-6 py-3 rounded-lg bg-purple-600/20 text-purple-300 hover:bg-purple-600 hover:text-white transition-all duration-300 hover:shadow-lg hover:shadow-purple-600/20 border border-purple-500/30 ${!prevUrl ? "opacity-50 pointer-events-none" : ""}`}
            >
                ← Anterior
            </a>

            {currentPage && (
                <div class="px-6 py-3 rounded-lg bg-purple-600/10 text-purple-300  transition-all duration-300 hover:shadow-lg  border border-purple-500/30">
                    {currentPage}
                </div>
            )}

            <a
                href={nextUrl}
                class={`px-6 py-3 rounded-lg bg-purple-600/20 text-purple-300 hover:bg-purple-600 hover:text-white transition-all duration-300 hover:shadow-lg hover:shadow-purple-600/20 border border-purple-500/30 ${!nextUrl ? "opacity-50 pointer-events-none" : ""}`}
            >
                Siguiente →
            </a>
        </nav>
    )
}
