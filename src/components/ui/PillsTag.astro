---
interface Props {
    tag: string;
    selectedtag?: string;
}

const { tag, selectedtag } = Astro.props;
---

<a
    href=`/blog/${tag}`
    class={`px-3 py-1.5 text-sm rounded-full transition-colors ${
        selectedtag === tag
            ? "bg-emerald-600 text-white"
            : "bg-gray-800 text-gray-300 hover:bg-gray-700"
    }`}
>
{tag.replaceAll("-", " ")}
</a>
