---
import { navigations } from "../../config/blog/config";
import Code from "../../icons/Code.astro";
import Hamburger from "./Hamburger.astro";
import NavLinks from "./NavLinks.astro";

const currentPath = Astro.url.pathname;

---

<header
    class="border-b border-gray-800 bg-gray-900/80 backdrop-blur-sm sticky top-0 z-10"
>
    <div class="container mx-auto p-4 flex justify-between items-center">
        <a href="/" class="flex items-center gap-4 group">
            <Code
                class="size-8 text-emerald-400 group-hover:text-emerald-300 transition-colors"
            />
            <span class="font-bold text-xl tracking-tight text-white">
                <span
                    class="text-emerald-400 group-hover:text-emerald-300 transition-colors"
                >
                    {"{"}
                </span>
                Empezando como dev
                <span
                    class="text-emerald-400 group-hover:text-emerald-300 transition-colors"
                    >{"}"}
                </span>
            </span>
        </a>
        <div class="flex items-center gap-4">
            <span class="hidden md:flex">
                "componente para cambiar el idioma"
            </span>

            <nav class="hidden md:flex items-center gap-6">
                {
                    navigations.map((nav) => (
                        <NavLinks {...nav} currentPath={currentPath} />
                    ))
                }
            </nav>
            {/* Hamburger */}
            <Hamburger />
        </div>
    </div>
    <nav
        id="mobile-menu"
        class="hidden md:hidden bg-gray-800 border-t border-gray-700"
    >
        <div class="container mx-auto px-4 py-1 flex flex-col">
            {
                navigations.map((nav) => (
                    <NavLinks {...nav} currentPath={currentPath} />
                ))
            }
        </div>
    </nav>
</header>
